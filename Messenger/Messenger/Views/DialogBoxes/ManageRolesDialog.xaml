<ContentDialog
    x:Class="Messenger.Views.DialogBoxes.ManageRolesDialog"
    x:Name="manageRolesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Messenger.Views.DialogBoxes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Messenger.Models"
    xmlns:icons="using:MahApps.Metro.IconPacks"
    mc:Ignorable="d"
    PrimaryButtonText="Close"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">
    <Grid
        ColumnSpacing="25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Column="0">
            <StackPanel
                Spacing="10">
                <TextBlock
                    Text="Member Roles"
                    FontSize="24"
                    FontWeight="SemiBold"
                    />
                <ListBox>
                    <ListBoxItem>
                        <StackPanel>
                            <TextBlock
                                Text="Admin"
                                />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </StackPanel>
        <Grid
            Grid.Column="1">
            <StackPanel
                Spacing="10">
                <TextBlock
                    Text="Permissions"
                    FontSize="24"
                    FontWeight="Thin"
                    Opacity=".55"
                    />
                <StackPanel
                    Orientation="Horizontal">
                    <ComboBox
                        x:Name="SelectablePermissions"
                        PlaceholderText="Add Permissions...">
                    </ComboBox>
                    <Button
                        Background="Transparent"
                        Padding="20 5">
                        <icons:PackIconFontAwesome
                            Kind="PlusCircleSolid"
                            />
                    </Button>
                </StackPanel>
                <ScrollViewer>
                    <ListView
                        MaxHeight="150"
                        SelectionMode="Single"
                        ItemsSource="{Binding
                            ElementName=manageRolesDialog,
                            Path=MemberRoles,
                            Mode=OneWay}"
                        x:Name="SelectedPermissions">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:MemberRole">
                                <Grid>
                                    <TextBlock
                                        Text="{Binding Title}"
                                        FontSize="14"
                                        />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Grid>
</ContentDialog>
