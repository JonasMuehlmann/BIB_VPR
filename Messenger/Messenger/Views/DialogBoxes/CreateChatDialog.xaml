<ContentDialog
    x:Class="Messenger.Views.DialogBoxes.CreateChatDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Messenger.Views.DialogBoxes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Messenger.Helpers"
    mc:Ignorable="d"
    Title="Start a new chat"
    PrimaryButtonText="Start"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">
    <ContentDialog.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility" />
    </ContentDialog.Resources>
    <ContentDialog.PrimaryButtonStyle>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0275d8" />
            <Setter Property="Foreground" Value="WhiteSmoke" />
        </Style>
    </ContentDialog.PrimaryButtonStyle>
    <Grid>
        <StackPanel>
            <AutoSuggestBox
                Name="SearchUserBox"
                PlaceholderText="Search user"
                TextChanged="SearchUserBox_TextChanged"
                SuggestionChosen="SearchUserBox_SuggestionChosen"
                />
            <!-- USER INFO -->

            <Grid
                x:Name="UserInfoPanel"
                Padding="15 25 15 0"
                Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Ellipse
                    Fill="LightGray"
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    Margin="0 0 20 0"
                    />
                <StackPanel
                    x:Name="HeaderInfo"
                    Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Center">
                    <TextBlock
                        Text="{Binding DisplayName}"
                        Style="{StaticResource FlyoutPickerTitleTextBlockStyle}"
                        />
                    <TextBlock
                        Text="{Binding Mail}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        />
                </StackPanel>
                <StackPanel
                    x:Name="ExtraInfo"
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Padding="15 20 15 15">
                    <TextBlock
                        Text="Bio"
                        Style="{StaticResource DetailBodyBaseMediumStyle}"
                        />
                    <TextBlock
                        Text="Hi. This an example bio because nobody writes bio"
                        TextWrapping="WrapWholeWords"
                        MaxWidth="225"
                        />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</ContentDialog>
