<UserControl
    x:Class="Messenger.Views.Controls.SendMessageControl"
    x:Name="sendMessageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Messenger.Views.Controls"
    xmlns:icons="using:MahApps.Metro.IconPacks"
    xmlns:converters="using:Messenger.Helpers.Converters"
    xmlns:ms="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:models="using:Messenger.Core.Models"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="800">
    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <Style x:Key="OuterPanel" TargetType="StackPanel">
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Padding" Value="20 10" />
            <Setter Property="Margin" Value="20 0 20 20" />
            <Setter Property="MaxWidth" Value="850" />
        </Style>
        <Style x:Key="AttachmentsList" TargetType="ListView">
            <Setter Property="Height" Value="80" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Visibility" Value="Visible" />
            <Setter Property="Background" Value="{StaticResource SystemChromeLowColor}" />
        </Style>
        <Style x:Key="AttachmentsListItem" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
        <Style x:Key="MessageContent" TargetType="TextBox">
            <Setter Property="Padding" Value="20 10" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Width" Value="40" />
        </Style>
        <Style x:Key="SendButton" TargetType="Button" BasedOn="{StaticResource IconButton}">
        </Style>
        <Style x:Key="OpenFilesButton" TargetType="Button" BasedOn="{StaticResource IconButton}">
        </Style>
        <DataTemplate x:Key="Attachment">
            <Border
                Background="{ThemeResource SystemAccentColorDark3}"
                Padding="10,8,10,8"
                HorizontalAlignment="Stretch"
                CornerRadius="5">
                <TextBlock
                    Text="{Binding DisplayName}"
                    Foreground="White"
                    />
            </Border>
        </DataTemplate>
        <Style x:Key="ReplyPanel" TargetType="Grid">
            <Setter Property="Padding" Value="15 0" />
            <Setter Property="Margin" Value="5 10" />
            <Setter Property="BorderThickness" Value="5 0 0 0" />
            <Setter Property="BorderBrush" Value="{ThemeResource SystemAccentColor}" />
            <Setter Property="Visibility" Value="Collapsed" />
        </Style>
    </UserControl.Resources>

    <StackPanel Style="{StaticResource OuterPanel}">
        <MenuFlyoutSeparator Margin="0 20" Opacity=".25"/>
        <Grid
            Style="{StaticResource ReplyPanel}"
            Visibility="{x:Bind
                ViewModel.ParentViewModel.ReplyMessage,
                Mode=OneWay,
                Converter={StaticResource NullToVisibilityConverter}}">
            <StackPanel
                DataContext="{x:Bind
                    ViewModel.ParentViewModel.ReplyMessage,
                    Mode=OneWay}">
                <TextBlock
                    Text="{Binding Sender.Name}"
                    Opacity=".55"
                    />
                <TextBlock
                    Text="{Binding Content}"
                    />
            </StackPanel>
            <Button
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="Transparent"
                Tapped="RemoveReply_Tapped">
                <Viewbox
                    Height="15"
                    Opacity=".55">
                    <icons:PathIconFontAwesome
                        Kind="BackspaceSolid"
                        Foreground="{ThemeResource PrimaryAccent_A}"
                        />
                </Viewbox>
            </Button>
        </Grid>
        <!-- CONTENT BAR -->
        <Grid
            VerticalAlignment="Center">
            <TextBox
                Name="tbxContent"
                Style="{StaticResource MessageContent}"
                Background="{ThemeResource Elevation_2}"
                PlaceholderText="Write something..."
                PreviewKeyDown="tbxContent_PreviewKeyDown"
                Text="{x:Bind
                    ViewModel.ParentViewModel.MessageToSend.Content,
                    Mode=TwoWay,
                    UpdateSourceTrigger=PropertyChanged}"
                />
        </Grid>
        <!-- ACTIONS -->
        <Grid
            Margin="0 5 0 0">
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <Button
                    Style="{StaticResource OpenFilesButton}"
                    Command="{x:Bind
                        ViewModel.AttachFileCommand}">
                    <Viewbox
                        Width="18">
                        <icons:PackIconFontAwesome
                            Kind="PlusCircleSolid"
                            />
                    </Viewbox>
                </Button>
                <Button
                    Style="{StaticResource OpenFilesButton}">
                    <Viewbox
                        Width="18">
                        <icons:PackIconFontAwesome
                            Kind="SmileRegular"
                            />
                    </Viewbox>
                    <Button.Flyout>
                        <Flyout
                            Placement="TopEdgeAlignedRight">
                            <StackPanel
                                Spacing="10">
                                <TextBox
                                    PlaceholderText="Search Emojis.."
                                    />
                                <StackPanel
                                    Orientation="Horizontal">
                                    <ScrollViewer
                                        VerticalScrollMode="Disabled"
                                        HorizontalScrollMode="Enabled">
                                        <ItemsControl
                                            ItemsSource="{x:Bind
                                                ViewModel.EmojiCategories,
                                                Mode=OneWay}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel
                                                        Orientation="Horizontal"
                                                        />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <ToggleButton
                                                        Content="{Binding}"
                                                        />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>
                                <Grid
                                    Visibility="{x:Bind
                                        ViewModel.Emojis,
                                        Mode=OneWay,
                                        Converter={StaticResource NullToVisibilityConverter},
                                        ConverterParameter='invert'}"
                                    Opacity=".55">
                                    <StackPanel
                                        Margin="0 50"
                                        Spacing="5">
                                        <TextBlock
                                            TextAlignment="Center"
                                            Text="Select a category"
                                            />
                                        <Viewbox
                                            Width="22"
                                            Height="22">
                                            <icons:PackIconFontAwesome
                                                Kind="SmileRegular"
                                                />
                                        </Viewbox>
                                    </StackPanel>
                                </Grid>
                                <ListBox
                                    MaxWidth="325"
                                    MaxHeight="150"
                                    ItemsSource="{x:Bind
                                        ViewModel.Emojis,
                                        Mode=OneWay}">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ms:WrapPanel
                                                />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate x:DataType="models:Emoji">
                                            <Grid>
                                                <TextBlock
                                                    TextAlignment="Center"
                                                    Text="{x:Bind Emoji_}"
                                                    />
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
            <Button
                HorizontalAlignment="right"
                Style="{StaticResource SendButton}"
                Command="{x:Bind
                    ViewModel.SendMessageCommand}"
                CommandParameter="{x:Bind
                    ViewModel.ParentViewModel.MessageToSend,
                    Mode=OneWay}">
                <Viewbox
                    Width="18">
                    <icons:PackIconFontAwesome
                        Kind="PaperPlaneSolid"
                        />
                </Viewbox>
            </Button>
        </Grid>
    </StackPanel>
</UserControl>
