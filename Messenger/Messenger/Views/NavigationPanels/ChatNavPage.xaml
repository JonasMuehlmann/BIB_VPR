<Page
    x:Class="Messenger.Views.ChatNavPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:model="using:Messenger.Core.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <ListView x:Name="itemListView"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Height="auto"
                  Width="auto"
                  ItemsSource="{x:Bind ViewModel.User.Userlist}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <SymbolIcon Symbol="Comment"/>
                        <TextBlock  Text="{Binding}" Padding="10"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <!--<ListViewItem >
                <StackPanel Orientation="Horizontal" >
                    <SymbolIcon Symbol="Comment"/>
                    <TextBlock  Text="Hi" Padding="10"/>
                </StackPanel>
            </>
            <ListViewItem>
                <StackPanel Orientation="Horizontal" >
                    <SymbolIcon Symbol="Comment"/>
                    <TextBlock Text="Hello" Padding="10"/>
                </StackPanel>
            </ListViewItem>
            <ListViewItem>
                <StackPanel Orientation="Horizontal" >
                    <SymbolIcon Symbol="Comment"/>
                    <TextBlock Text="Hallo" Padding="10"/>
                </StackPanel>
            </ListViewItem>-->
        </ListView>
        <TextBox x:Name="SearchField"
                   Width="30"
                   Height="30"
                   HorizontalAlignment="Left"
                   Margin="30"
                   Foreground="Gray"
                   BorderBrush="Black"
                   Visibility="Collapsed"
                   />
        
        <Button x:Name="newChat"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                CornerRadius="17"
                BorderThickness="0.8"
                Background="Transparent"
                BorderBrush="Black"
                Click="newChat_Click"
                Margin="20 10 10 10"
                >
     
            <SymbolIcon Symbol="Add"
                        Opacity="0.9"/>
        </Button>
    </Grid>
</Page>
