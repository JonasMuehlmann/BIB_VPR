<Page
    x:Class="Messenger.Views.NotificationNavPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Messenger.Models"
    xmlns:controls="using:Messenger.Controls.NotificationControls"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <controls:InboxControl
            Notifications="{x:Bind
                ViewModel.Notifications,
                Mode=TwoWay,
                UpdateSourceTrigger=PropertyChanged}"
            />
        <controls:ActionControl
            ClearInboxCommand="{x:Bind ViewModel.ClearInboxCommand}"
            RefreshInboxCommand="{x:Bind ViewModel.RefreshInboxCommand}"
            />
    </Grid>
</Page>
